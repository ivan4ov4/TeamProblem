{% extends 'base.html.twig'  %}

{% block main %}
    <div class="panel panel-default">
    <div class="panel-heading"><h3>Articles</h3></div>
    <div class="panel-body">

    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Content</th>
            <th>Summary</th>
            <th>Date Added</th>
            <th>View</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles |reverse %}
        <td>{{ article.id }}</td>
        <td>{{ article.title }}</td>
        <td>{{ article.content }}</td>
        <td>{{ article.summary }}</td>
        <td>{{ article.dateAdded |date('Y-m-d H:i:s') }}</td>
        <td><a class="btn btn-xs btn-primary" href="{{ path('article_view' , {id: article.id}) }}">View</a></td>
        <td><a class="btn btn-xs btn-success" href="{{ path('article_edit' , {id: article.id}) }}">Edit</a></td>
        <td><a class="btn btn-xs btn-danger" href="{{ path('article_delete' , {id: article.id}) }}">Delete</a></td>
        </tbody>

        {% endfor %}

    </table>
    </div>
    </div>



{% endblock %}