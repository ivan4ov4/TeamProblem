{% extends 'base.html.twig' %}

{% block main %}

    <div class="container body-content">
        <div class="well">
            <h2>All Users
            <div class="pull-right">
                <a class="btn btn-default" href="{{ path('admin_users_all') }}"><< Admin Panel</a>
            </div>
            </h2>
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home1" data-toggle="tab" aria-expanded="false">Users(clear)</a></li>
                <li class=""><a href="#home" data-toggle="tab" aria-expanded="false">Users</a></li>
                <li class=""><a href="#profile" data-toggle="tab" aria-expanded="true">Legend</a></li>
            </ul>

            <div id="myTabContent" class="tab-content">

                <div class="tab-pane fade active in" id="home1">
                    <div class="row">
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.fullName }}</td>
                                    <td>{{ user.email }}</td>
                                    <td><a class="btn btn-success btn-xs" href="{{ path('admin_user_edit' , {'id':user.id}) }}">Edit</a></td>
                                    <td><a class="btn btn-danger btn-xs" href="{{ path('admin_user_delete' , {'id':user.id}) }}">Delete</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="tab-pane fade" id="home">
                    <div class="row">
                       <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}

                                <tr>
                                <tr
                                    {% if user.isFullAdmin() %}class="danger"
                                    {% elseif user.isAdmin()%} class="info"
                                    {% elseif  user.isEditor() %}class="warning"
                                    {% endif %}>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.fullName }}</td>
                                    <td>{{ user.email }}</td>
                                    <td><a class="btn btn-success btn-xs" href="{{ path('admin_user_edit' , {id:user.id}) }}">Edit</a></td>
                                    <td><a class="btn btn-danger btn-xs" href="{{ path('admin_user_delete' , {id:user.id}) }}">Delete</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>

                        <tr class="danger">
                            <td>1</td>
                            <td>HeadAdmin</td>
                            <td>head_admin@admin.com</td>
                            <td><a class="btn btn-success btn-xs">Edit</a></td>
                            <td><a class="btn btn-danger btn-xs">Delete</a></td>
                        </tr>

                        <tr class="info">
                            <td>2</td>
                            <td>Admin</td>
                            <td>admin@admin.com</td>
                            <td><a class="btn btn-success btn-xs">Edit</a></td>
                            <td><a class="btn btn-danger btn-xs">Delete</a></td>
                        </tr>

                        <tr class="warning">
                            <td>3</td>
                            <td>Editor</td>
                            <td>editor@admin.com</td>
                            <td><a class="btn btn-success btn-xs">Edit</a></td>
                            <td><a class="btn btn-danger btn-xs">Delete</a></td>
                        </tr>
                        <tr>
                            <td>4</td>
                            <td>User</td>
                            <td>user@admin.com</td>
                            <td><a class="btn btn-success btn-xs">Edit</a></td>
                            <td><a class="btn btn-danger btn-xs">Delete</a></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </ul>
    </div>

{% endblock %}